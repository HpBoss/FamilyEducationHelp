<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/sexConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="确定"/>

        <View
            android:layout_width="match_parent"
            android:background="#777777"
            android:layout_height="1dp"/>
    </LinearLayout>


    <com.example.familyeducationhelp.widget.WheelView
        android:id="@+id/sexWheelPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wheelItemCount="3"
        app:wheelItemSize="28dp"
        app:wheelDividerSize="30dp"
        app:wheelGravity="center"
        app:gravityCoefficient="0.6"
        app:wheelTextColorCenter="#494949"
        app:wheelTextColor="#A9AAA9"
        app:wheelTextSize="18sp"/>




</LinearLayout>